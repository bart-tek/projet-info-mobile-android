<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.henripotier">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HenriPotier">
        <activity android:name=".view.LibraryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.CartActivity"
            android:label="@string/cart_activity_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.LibraryActivity" />
        </activity>
        <activity
            android:name=".view.BookDetailsActivity"
            android:label="@string/bookDetails_activity_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.LibraryActivity" />
        </activity>
    </application>

</manifest>